{% extends 'layout.twig' %}

{% block content %}
    <div class="col-lg-12">
        {% include 'inc/breadcrumbs.twig' %}
        <div class="user-data">
            <p class="lead">Мои данные</p>
            <table class="table">
                <tr>
                    <td>Имя:</td>
                    <td>{{ user.info.name }}</td>
                </tr>
                <tr>
                    <td>Фамилия:</td>
                    <td>{{ user.info.surname }}</td>
                </tr>
                <tr>
                    <td>Отчество:</td>
                    <td>{{ user.info.patr }}</td>
                </tr>
                <tr>
                    <td>Логин:</td>
                    <td>{{ user.info.login }}</td>
                </tr>
                <tr>
                    <td>Дата рождения:</td>
                    <td>{{ user.info.birthday }}</td>
                </tr>
                <tr>
                    <td>Аватар:</td>
                    <td>Test</td>
                </tr>
                <tr>
                    <td>Баланс:</td>
                    <td>{{ user.info.balance }}</td>
                </tr>
            </table>
        </div>
        <div class="user-action">
            <p class="lead">Действия</p>
            <a class="btn btn-primary" href="/account/balance">Управление балансом</a>
            <a class="btn btn-primary" href="/account/edit">Редактировать данные</a>
        </div>
    </div>
{% endblock %}
